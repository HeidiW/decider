
<h1 class='offset-by-two five columns'>Welcome to Decider</h1>

<% if current_user %>
  <h2 class='login-signup five columns'>
    <%= current_user.email %>
  </h2>
  <%= link_to "Log-Out", log_out_path, method: :delete %>
<% else %>
  <h2 class="login-signup five columns">
    <%= link_to "Log-In", log_in_path, class: "button" %>
    <%= link_to "Sign-Up", new_user_path, class: "button" %>
  </h2>
<% end %>